%h2
  Programmes

%ul.programs
  - @sections.each do |section|
    %li= link_to section.title, "/pages/program?r=#{section.title}"

- @programs.each do |program|
  .program
    %h4
      = (program.title.gsub("\n", "<br />")).html_safe
    %p
      - if program.image_url.present?
        = image_tag(program.image_url(:thumb))
      = (program.description.gsub("\n", "<br />")).html_safe

