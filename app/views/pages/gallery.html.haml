%h2
  Galerie

%ul.programs
  %li
    = link_to "Tous", "/pages/gallery"
  - @kinds.each do |kind|
    %li
      = link_to kind, "/pages/gallery?kind=#{kind}"

%h2
  = @title

%div
  - @medium.each_with_index do |media, index|
    .media{:class => media.media.present? ? "with-image" : "without-image"}
      %h4
        = media.title
      %p
        - if media.kind == "Photos"
          - if media.media.present?
            = link_to image_tag(media.media.normal.url), media.media.normal.url, :target => "_blank"
        - if media.kind == "Videos" || media.kind == "Audio"
          - if media.embed.present?
            = media.embed.html_safe

%p.link-to-top
  = link_to "retour en haut de page", "#"