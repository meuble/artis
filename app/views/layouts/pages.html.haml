!!! 5
%html{:lang => I18n.locale}
  %head
    %meta{:charset => 'UTF-8'}
    = csrf_meta_tags

    %title
      = t('.title')

    %link{ rel: 'icon', href: asset_path('favicon.ico') }
    %link{ href: "https://fonts.googleapis.com/css?family=Marck+Script", rel: 'stylesheet', type:'text/css' }
    = stylesheet_link_tag 'application'

  %body.pages
    .header
      %p.logo
        = link_to image_tag("logo.png"), "/"
      %ul.menu
        %li
          = link_to "accueil", "/"
        %li
          = link_to "musiciens", "/pages/musicians"
        %li
          = link_to "agenda", "/pages/concerts"
        %li
          = link_to "programmes", "/pages/program"
        %li
          = link_to "galerie", "/gallery"
        %li
          = link_to "contact", "/pages/contact"

    .main
      = yield
    .footer

