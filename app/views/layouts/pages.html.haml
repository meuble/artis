!!! 5
%html{:lang => I18n.locale}
  %head
    %meta{:charset => 'UTF-8'}
    = csrf_meta_tags

    %title
      = t('.title')

    %link{ rel: 'icon', href: asset_path('favicon.ico') }
    %link{ href: "https://fonts.googleapis.com/css?family=Marck+Script", rel: 'stylesheet', type:'text/css' }
    = stylesheet_link_tag 'application'

  %body.pages
    .header
      %p.logo
        = link_to image_tag("logo.png"), "/"
      %ul.menu
        %li
          = link_to "accueil", "/pages/intro"
        %li
          = link_to "musiciens", "/pages/musicians"
        %li
          = link_to "agenda", "/pages/concerts"
        %li
          = link_to "programmes", "/pages/program"
        %li
          = link_to "galerie", "/pages/gallery"
        %li
          = link_to "contacts", "/pages/contact"

    .main
      = yield
    .footer
    %script{:async => 1, :src => "https://www.googletagmanager.com/gtag/js?id=UA-108354297-1"}
    :javascript
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'UA-108354297-1');
